<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="15dp">

    <ImageView
        android:id="@+id/spot_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/spot_1">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="112dp"
        android:text="갯골생태공원"
        android:fontFamily="@font/kimjungchulgothicbold"
        android:textSize="20sp"
        android:textColor="#02152b"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="112dp"
        android:gravity="left"
        android:text="내위치로부터"
        android:fontFamily="@font/kimjungchulgothicregular"
        android:textSize="10sp"
        android:textColor="#02152b"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="170dp"
        android:gravity="left"
        android:text="6.0km"
        android:fontFamily="@font/kimjungchulgothicregular"
        android:textSize="10sp"
        android:textColor="#02152b"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="112dp"
        android:gravity="left"
        android:text="#가족과_함께 #자연과_가까운\n#염전체험 #국가습지보호구역"
        android:fontFamily="@font/kimjungchulgothicregular"
        android:textSize="10sp"
        android:textColor="#02152b"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="112dp"
        android:layout_gravity="bottom"
        android:text="경기도 시흥시 동서로 287"
        android:fontFamily="@font/kimjungchulgothicregular"
        android:textSize="10sp"
        android:textColor="#02152b"
        >
    </TextView>
    <ImageButton
        android:id="@+id/loc_info_btn1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end|center_vertical"
        android:background="@drawable/btn_circle"
        android:src="@drawable/ic_map"
        android:scaleType="center"
        android:contentDescription="mapIcon"
        />
</FrameLayout>




