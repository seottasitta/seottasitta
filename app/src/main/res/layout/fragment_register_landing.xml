<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/login_toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#fafcff"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:fontFamily="@font/kimjungchulgothicbold"
            android:layout_gravity="center"
            android:textColor="#02152b"
            android:textSize="25sp"
            />

    </androidx.appcompat.widget.Toolbar>


    <TextView

        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="112dp"
        android:layout_marginRight="85dp"
        android:layout_marginBottom="56dp"
        android:fontFamily="@font/kimjungchulgothicbold"
        android:text="서해따라, 시흥따라\n함께가는 시흥 산책길에\n오신것을 환영합니다"
        android:textColor="#02152b"
        android:textSize="30sp" />

    <RadioButton
        android:id="@+id/all_selected"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layoutDirection="rtl"
        android:buttonTint="#6602152b"
        android:fontFamily="@font/kimjungchulgothicbold"
        android:text="전체동의"
        android:textColor="#02152b"
        android:textSize="20sp"
        android:theme="@style/CustomRadioButton"
        />

    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="333dp"
        android:layout_height="1dp"
        android:background="#6602152b"
        android:layout_marginLeft="39.5dp"
        android:layout_marginRight="39.5dp">
    </View>

    <RadioButton
        android:id="@+id/over14_essential"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layoutDirection="rtl"
        android:buttonTint="#6602152b"
        android:fontFamily="@font/kimjungchulgothicbold"
        android:text="만 14세 이상입니다. (필수)"
        android:textColor="#02152b"
        android:textSize="17sp"
        android:theme="@style/CustomRadioButton"

        />

    <RadioButton
        android:id="@+id/policy_essential"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layoutDirection="rtl"
        android:buttonTint="#6602152b"
        android:fontFamily="@font/kimjungchulgothicbold"
        android:text="서해따라, 시흥따라 이용 약관 동의. (필수)"
        android:textColor="#02152b"
        android:textSize="17sp"
        android:theme="@style/CustomRadioButton" />

    <RadioButton
        android:id="@+id/use_gps_option"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layoutDirection="rtl"
        android:buttonTint="#6602152b"
        android:fontFamily="@font/kimjungchulgothicbold"
        android:text="위치정보 이용 약관 동의. (선택)"
        android:textColor="#02152b"
        android:textSize="17sp"
        android:theme="@style/CustomRadioButton" />


    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/register_btn"
        android:layout_width="332dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/login_border"
        android:fontFamily="@font/kimjungchulgothicbold"
        android:text="회원가입"
        android:textSize="25sp"
        android:textColor="#fafcff"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
</LinearLayout>