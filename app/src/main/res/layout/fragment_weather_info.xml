<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/hometoolbar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#fafcff"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기상정보"
            android:fontFamily="@font/kimjungchulgothicbold"
            android:layout_gravity="center"
            android:textColor="#02152b"
            android:textSize="25sp"
            />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="332dp"
        android:layout_height="83dp"
        android:background="@drawable/info_board"
        android:fontFamily="@font/kimjungchulgothicbold"
        android:gravity="center_vertical|center_horizontal"
        android:text="행정구역이름"
        android:textColor="#02152b"
        android:textSize="30sp"
        android:elevation="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:background="@drawable/info_board"
                android:fontFamily="@font/kimjungchulgothicregular"
                android:gravity="center_vertical|center_horizontal"
                android:text="0°C"
                android:textColor="#02152b"
                android:textSize="60sp"
                android:elevation="5dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:transformPivotY="30dp"
                >
            </TextView>
            <TextView
                android:layout_width="91dp"
                android:layout_height="33dp"
                android:text="현재기온"
                android:textSize="25dp"
                android:textColor="#02152b"
                android:fontFamily="@font/kimjungchulgothicbold"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="10dp"
                >
            </TextView>
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:background="@drawable/info_board"
                android:fontFamily="@font/kimjungchulgothicregular"
                android:gravity="center_vertical|center_horizontal"
                android:text="맑음"
                android:textColor="#02152b"
                android:textSize="60sp"
                android:elevation="5dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="60dp"
                android:transformPivotY="30dp">
            </TextView>

            <TextView
                android:layout_width="45dp"
                android:layout_height="33dp"
                android:text="날씨"
                android:textSize="25dp"
                android:textColor="#02152b"
                android:fontFamily="@font/kimjungchulgothicbold"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="10dp">
            </TextView>
        </FrameLayout>

    </LinearLayout>

    <TextView
        android:layout_width="332dp"
        android:layout_height="332dp"
        android:background="@drawable/info_board"
        android:fontFamily="@font/kimjungchulgothicregular"
        android:gravity="center_vertical|center_horizontal"
        android:text="따듯하게 입으세요!"
        android:textColor="#02152b"
        android:textSize="35sp"
        android:elevation="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
    </TextView>

</LinearLayout>