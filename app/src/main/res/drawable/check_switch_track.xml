        <shape android:shape="rectangle">
            <corners android:radius="45dp"/>

            <solid android:color="#ff7f00"/>
            <stroke android:width="1dp" android:color="#02152b"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="45dp"/>

            <solid android:color="#064da1"/>
            <stroke android:width="1dp" android:color="#02152b"/>
        </shape>
    </item>
</selector>